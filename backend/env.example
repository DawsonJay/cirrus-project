# Cirrus Project - Environment Variables Template
# Copy this file to .env and fill in your API keys

# API Keys for Weather Services
OPEN_METEO_API_KEY=  # Not required - Open-Meteo is free without API key
ENVIRONMENT_CANADA_API_KEY=  # Not required - Environment Canada is free without API key
WEATHER_UNLOCKED_APP_ID=your_weather_unlocked_app_id_here
WEATHER_UNLOCKED_API_KEY=your_weather_unlocked_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Server Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Data Storage
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed

# Cache Configuration
CACHE_TTL=300  # 5 minutes in seconds
MAX_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds
